set nocompatible
set number

set undofile
set undodir=/tmp/

"regex search
set hlsearch "highlight regex search
set incsearch "incremental search
set ignorecase

syntax on
set background=dark
colorscheme solarized

set backspace=indent,eol,start

set mouse=a


"formatting
set expandtab
set tabstop=2
set sw=2 "shift width
set softtabstop=2
